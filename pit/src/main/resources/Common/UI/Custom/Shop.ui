    Group #TitleBar {
      Anchor: (Height: 50);
      Background: #222222;
      LayoutMode: Left;
      Padding: (Horizontal: 20, Vertical: 10);

      Label {
        Style: (
          FontSize: 24,
          TextColor: #ffffff,
          RenderBold: true,
          VerticalAlignment: Center
        );
        Text: "Shop";
      }

      Group {
        FlexWeight: 1;
      }

      Group {
        LayoutMode: Left;
        Padding: (Right: 10);

        ItemIcon #GoldIcon {
          Anchor: (Width: 24, Height: 24);
          Visible: true;
        }

        Label #GoldAmount {
          Style: (
            FontSize: 18,
            TextColor: #ffd700,
            RenderBold: true,
            VerticalAlignment: Center
          );
          Text: "0g";
          Padding: (Left: 5);
        }
      }

      Button #CloseButton {
        Anchor: (Width: 30, Height: 30);
        LayoutMode: Center;
        Style: (
          Default: (Background: #aa2222),
          Hovered: (Background: #cc3333),
          Pressed: (Background: #dd4444)
        );

        Label {
          Style: (
            FontSize: 20,
            TextColor: #ffffff,
            RenderBold: true,
            HorizontalAlignment: Center,
            VerticalAlignment: Center
          );
          Text: "X";
        }
      }
    }

