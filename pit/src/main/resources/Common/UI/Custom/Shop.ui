//AI SLOP

$Common = "Common.ui";

Group {
  LayoutMode: Center;

  Group {
    Anchor: (Width: 800, Height: 600);

    Group #Title {
      Anchor: (Height: $Common.@TitleHeight, Top: 0);
      Padding: (Top: 7);
      Background: (TexturePath: "Common/ContainerHeaderNoRunes.png", HorizontalBorder: 35, VerticalBorder: 0);

      Label {
        Style: (
          ...$Common.@TitleStyle,
          HorizontalAlignment: Start
        );
        Padding: (Horizontal: 19);
        Text: "Shop";
      }
    }

    Group #Content {
      LayoutMode: Top;
      Anchor: (Top: $Common.@TitleHeight);
      Padding: $Common.@ContentPadding;
      Background: (TexturePath: "Common/ContainerPatch.png", Border: 23);

      Group #CategoryTabs {
        LayoutMode: Left;
        Anchor: (Height: $Common.@PrimaryButtonHeight);
        Padding: (Bottom: 10);

        $Common.@SecondaryTextButton #CategoryWeapons {
          Text: "Weapons";
          Anchor: (Width: 140);
        }

        Group {
          Anchor: (Width: 8);
        }

        $Common.@SecondaryTextButton #CategoryArmor {
          Text: "Armor";
          Anchor: (Width: 140);
        }

        Group {
          Anchor: (Width: 8);
        }

        $Common.@SecondaryTextButton #CategoryItems {
          Text: "Items";
          Anchor: (Width: 140);
        }
      }

      Group #ScrollWrapper {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $Common.@DefaultScrollbarStyle;
        Padding: (Right: 10);

        Group #ItemsContainer {
          LayoutMode: Top;

          @ShopItem #Item0 {
            TextButton #BuyButton0 {
              Text: "BUY";
              Style: $Common.@SecondaryTextButtonStyle;
              Anchor: (Height: 35);
              Padding: (Horizontal: 24);
            }
          }

          @ShopItem #Item1 {
            TextButton #BuyButton1 {
              Text: "BUY";
              Style: $Common.@SecondaryTextButtonStyle;
              Anchor: (Height: 35);
              Padding: (Horizontal: 24);
            }
          }

          @ShopItem #Item2 {
            TextButton #BuyButton2 {
              Text: "BUY";
              Style: $Common.@SecondaryTextButtonStyle;
              Anchor: (Height: 35);
              Padding: (Horizontal: 24);
