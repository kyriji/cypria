              Padding: (Horizontal: 24);
            }
          }
        }
      }
    }

    $Common.@CloseButton #CloseButton {}

    Group {
      LayoutMode: Left;
      Anchor: (Right: 20, Top: 50, Height: 32, Width: 110);
      Padding: (Horizontal: 10, Vertical: 4);
      Background: $Common.@InputBoxBackground;

      ItemIcon #GoldIcon {
        Anchor: (Width: 20, Height: 20);
        Visible: true;
      }

      Label #GoldAmount {
        Style: (
          FontSize: 16,
          TextColor: #ffd700,
          RenderBold: true,
          VerticalAlignment: Center
        );
        Text: "0g";
        Padding: (Left: 5);
      }
    }
  }
}

// Reusable shop item component
@ShopItem = Group {
  LayoutMode: Left;
  Anchor: (Height: 100);
  Padding: (Bottom: 10, Full: 10);
  Background: $Common.@InputBoxBackground;
  Visible: false;

  Group #ItemIconContainer {
    LayoutMode: Center;
    Anchor: (Width: 80);
    Background: (Color: #1a1a1a);

    ItemIcon #ItemIcon {
      Anchor: (Width: 64, Height: 64);
      Visible: true;
    }
  }

  Group #ItemInfo {
    LayoutMode: Top;
    FlexWeight: 1;
    Padding: (Full: 10);

    Label #ItemName {
      Style: (
        FontSize: 18,
        TextColor: #ffffff,
        RenderBold: true
      );
      Text: "";
      Padding: (Bottom: 5);
    }

    Label #ItemDescription {
      Style: (
        ...$Common.@DefaultLabelStyle,
        FontSize: 14
      );
      Text: "";
    }
  }

  Group #PurchaseSection {
    LayoutMode: Top;
    Anchor: (Width: 115);
    Padding: (Horizontal: 15, Top: 25, Bottom: 5);

    Group #PriceContainer {
      LayoutMode: Center;
      Anchor: (Height: 32);
      Padding: (Horizontal: 10, Vertical: 4, Bottom: 8);
      Background: $Common.@InputBoxBackground;

      Group {
        LayoutMode: Left;

        ItemIcon #ItemPriceIcon {
          Anchor: (Width: 18, Height: 18);
          Visible: true;
        }

        Label #ItemPrice {
          Style: (
            FontSize: 14,
            TextColor: #ffd700,
            RenderBold: true,
            VerticalAlignment: Center
          );
          Text: "";
          Padding: (Left: 5);
        }
      }
    }

    // Buy button slot - child elements can override this
  }
};