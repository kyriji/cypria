          }

          @ShopItem #Item3 {
            TextButton #BuyButton3 {
              Text: "BUY";
              Style: $Common.@SecondaryTextButtonStyle;
              Anchor: (Height: 35);
              Padding: (Horizontal: 24);
            }
          }

          @ShopItem #Item4 {
            TextButton #BuyButton4 {
              Text: "BUY";
              Style: $Common.@SecondaryTextButtonStyle;
              Anchor: (Height: 35);
              Padding: (Horizontal: 24);
            }
          }

          @ShopItem #Item5 {
            TextButton #BuyButton5 {
              Text: "BUY";
              Style: $Common.@SecondaryTextButtonStyle;
              Anchor: (Height: 35);
              Padding: (Horizontal: 24);
            }
          }

          @ShopItem #Item6 {
            TextButton #BuyButton6 {
              Text: "BUY";
