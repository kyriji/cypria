// Reusable kit row component
@KitItem = Group {
  LayoutMode: Left;
  Anchor: (Height: 80);
  Padding: (Bottom: 8, Full: 8);
  Background: $Common.@InputBoxBackground;
  Visible: false;

  Group #KitIconContainer {
    LayoutMode: Center;
    Anchor: (Width: 64);
    Background: (Color: #1a1a1a);

    ItemIcon #KitIcon {
      Anchor: (Width: 48, Height: 48);
      Visible: true;
    }
  }

  Group #KitInfo {
    LayoutMode: Center;
    FlexWeight: 1;
    Padding: (Horizontal: 12);

    Label #KitName {
      Style: (
        FontSize: 18,
        TextColor: #ffffff,
        RenderBold: true
      );
      Text: "";
    }
  }

  Group #KitAction {
    LayoutMode: Center;
    Anchor: (Width: 110);
    Padding: (Horizontal: 10);

    // Select button slot - child elements inject here
  }
};
